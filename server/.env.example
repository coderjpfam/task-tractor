# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/task-tractor

# File Upload Configuration
USER_PROFILE_UPLOAD_PATH=uploads/user_profile

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@taskmanager.com

# Email Template Configuration
COMPANY_NAME=Your Company Name
APP_NAME=Task Manager
SUPPORT_EMAIL=support@yourcompany.com
HELP_URL=https://yourcompany.com/help
PRIVACY_URL=https://yourcompany.com/privacy
CONTACT_URL=https://yourcompany.com/contact
CLIENT_URL=http://localhost:3000

# Default Configuration
DEFAULT_DEPARTMENT_NAME=General
DEFAULT_USER_NAME=Admin User
DEFAULT_USER_EMAIL=admin@yourcompany.com
